{
  "Display": "React Native SouTheme",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "paths": {
      "@southem/animation/*": [
        "./packages/animation",
        "./packages/animation/src/*"
      ],
      "@southem/fonts/*": [
        "./packages/fonts",
        "./packages/fonts/src/*"
      ],
      "@southem/html/*": [
        "./packages/html",
        "./packages/html/src/*"
      ],
      "@southem/icons/*": [
        "./packages/icons",
        "./packages/icons/src/*"
      ],
      "@southem/styles/*": [
        "./packages/styles",
        "./packages/styles/src/*"
      ],
      "@southem/theme/*": [
        "./packages/theme",
        "./packages/theme/src/*"
      ],
      "@southem/tools/*": [
        "./packages/tools",
        "./packages/tools/src/*"
      ],
      "@southem/ui/*": [
        "./packages/ui",
        "./packages/ui/src/*"
      ],

      "@pg/*": [
        "./showcases/*"
      ]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": [
    "./packages",
    "./packages/**/package.json"
  ],
  "exclude": [
    "./packages/template/javascript",
    "./packages/template/typescript",
    "./showcases",
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "./**/*.snap"
  ]
}
